    "dev": "nodemon --inspect=0.0.0.0:9229 server.js",
    "test": "SILENT=true DATABASE_URL=${DATABASE_URL:-postgres://feat:feat@localhost/feat_test} mocha --exit",
    "test:xunit": "JUNIT_REPORT_PATH=${OUTPUT:-test-results.xml} mocha --exit -R mocha-jenkins-reporter",
    "test:coverage": "nyc --reporter=cobertura npm run test:xunit",
    "start": "node server.js",
    "lint": "eslint --ext .js db src test server.js"
  },
